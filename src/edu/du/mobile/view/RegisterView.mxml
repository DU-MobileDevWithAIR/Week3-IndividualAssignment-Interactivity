<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:popups="edu.du.mobile.view.popups.*">


    <fx:Script>
        <![CDATA[
        import mx.managers.PopUpManager;

        private function _onSubmitClick( event:Event ):void
        {
            if (reg_username_ti.text.length > 0 && reg_email_ti.text.length > 0 &&
                    reg_password_ti.text.length > 0 && confirm_password_ti.text.length > 0 && agreeToTerms_chk.selected == true) {
                registerSuccessPopup.open( this, true );
                PopUpManager.centerPopUp( registerSuccessPopup );
            } else {
                registerFailPopup.open( this, true );
                PopUpManager.centerPopUp( registerFailPopup );
            }
        }
        ]]>
    </fx:Script>

    <fx:Declarations>
        <s:RadioButtonGroup id="genderRBGroup"/>
        <popups:RegisterPopUpSuccess id="registerSuccessPopup"/>
        <popups:RegisterAppPopUpFailed id="registerFailPopup"/>
    </fx:Declarations>


    <s:Scroller height="100%" width="100%"
        top="20" left="20" right="20">

        <s:VGroup id="registerForm">

            <s:Label text="Register"
                fontSize="42"
                paddingLeft="140"/>

            <s:Label text="Username *"/>
            <s:TextInput id="reg_username_ti"
                prompt="choose a username"/>

            <s:Label text="Email *"/>
            <s:TextInput id="reg_email_ti"
                prompt="please enter your email"/>

            <s:Label text="Password *"/>
            <s:TextInput id="reg_password_ti"
                prompt="please choose a password"
                displayAsPassword="true"/>

            <s:Label text="Confirm password *"/>
            <s:TextInput id="confirm_password_ti"
                prompt="please confirm your password"
                displayAsPassword="true"/>

            <s:Label text="gender"/>
            <s:HGroup id="genderSelect">

                <s:RadioButton id="male_rb"
                    group="{ genderRBGroup }"/>
                <s:Label text="male"/>

                <s:RadioButton id="female_rb"
                    group="{ genderRBGroup }"/>
                <s:Label text="female"/>

            </s:HGroup>

            <s:HGroup id="termsAndCond">
              <s:CheckBox id="agreeToTerms_chk"/>
              <s:Label text="agree to terms *"/>
            </s:HGroup>

            <s:Button id="submit_btn"
                label="register"
                click="_onSubmitClick( event )"/>

        </s:VGroup>

    </s:Scroller>
</s:View>