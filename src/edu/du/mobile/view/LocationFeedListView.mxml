<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    title="Locations">

    <fx:Script>
        <![CDATA[
            import spark.events.IndexChangeEvent;
            private function _onListChange( event:IndexChangeEvent):void
            {
                // TODO: Navigate to the Location Details view.
                navigator.pushView(LocationDetailsView,locationList.selectedItem);
            }
        ]]>
    </fx:Script>

    <s:layout>
        <s:VerticalLayout paddingTop="20" paddingLeft="20" paddingRight="20"/>
    </s:layout>


    <s:HGroup width="98%">
        <s:Label text="Nearby Locations" paddingRight="20"/>
        <s:Label text="Done"
            fontSize="18"
            color="blue"
            paddingLeft="70" click="navigator.popToFirstView()"/>
    </s:HGroup>


    <!-- TODO: When the selected item is changed in the list you will execute the _onListChange() event listener -->
    <s:List id="locationList"
        top="100"
        width="100%"
        height="100%"
        change="_onListChange(event)">

        <s:ArrayList>
            <fx:String>Item one</fx:String>
            <fx:String>Item two</fx:String>
            <fx:String>Item three</fx:String>
        </s:ArrayList>

    </s:List>

</s:View>