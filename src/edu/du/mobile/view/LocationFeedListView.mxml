        xmlns:s="library://ns.adobe.com/flex/spark"
        creationComplete="initApp();">

    <fx:Script>
        <![CDATA[
        private function initApp():void {
            locationList.addEventListener(Event.CHANGE, _onListChange);
        }

        private function _onListChange(event:Event):void {
            navigator.pushView(LocationDetailsView);
        }
        ]]>
    </fx:Script>

    <s:layout>
        <s:VerticalLayout paddingTop="20" paddingLeft="20" paddingRight="20"/>
    </s:layout>


    <s:HGroup>
        <s:Label text="Nearby Locations"
            paddingLeft="125"/>
        <s:Label text="Done"
            fontSize="18"
            color="blue"
            paddingLeft="70"/>
    </s:HGroup>


    <s:List id="locationList"
        top="100"
        width="100%"
        height="100%"
            >

        <s:ArrayList>
            <fx:String>Item one</fx:String>
            <fx:String>Item two</fx:String>
            <fx:String>Item three</fx:String>
        </s:ArrayList>

    </s:List>

</s:View>